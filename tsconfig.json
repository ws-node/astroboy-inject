{
  "compilerOptions": {
    "sourceMap": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "resolveJsonModule": true,
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "lib": ["es2016", "es2015"]
  },
  "include": ["./index.ts"],
  "exclude": ["./test"]
}
